<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nufi.kyb.v1</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-5/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.1/font/bootstrap-icons.css">
</head>
<body>
  <div class="container-fluid p-0 d-flex vh-100">
    @RenderSection("Sidebar", false)
    <main class="active d-flex flex-column w-100 main-container">
      @RenderSection("Header", false)
      @RenderBody()
    </main>
  </div>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap-5/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  <script src="~/js/sidebar.js" asp-append-version="true"></script>
  <!-- bootstrap js -->

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
